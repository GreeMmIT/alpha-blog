<h1>Showing Articles list</h1>

<table>
  <thead>
    <tr>  
      <th>Title</th>
      <th>Description</th>
      <th>Body</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |art| %>
    <tr>
      <td><%= art.title %></td>
      <td><%= art.description %></td>
      <td><%= art.body %></td>
      <td><%= link_to 'Show', article_path(art) %></td>
      <td><%= link_to 'Edit', edit_article_path(art) %></td>
      <td><%= link_to 'Delete', article_path(art), data:{turbo_method: :delete, turbo_confirm: "Are you sure?" }%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>
<%= link_to 'New Article', new_article_path%>
</p>
