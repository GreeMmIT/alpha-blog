<div class="conteiner m-4">

  <div class="row justify-content-center">
    <div class="col-10">
      
      <%= render 'shared/errors', obj: @category %>

      <%= form_with(model: @category , data: {turbo:false} ,class:"shadow p-3 mb-5 bg-info rounded", local: true) do |f|  %>

        <div class="form_group row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder:"Enter a Catagory name" %> 
          </div>
        </div>
<br>
        <div class="form_group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg col-2" %>
        </div>

      <% end %>

    </div>
  </div>
</div>